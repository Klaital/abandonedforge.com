<% provide :title, 'Cart' %>
<div class="center jumbotron">
  <h1>Cart Items</h1>
</div>


<table class="cart">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Customization Request</th>
      <th colspan=12"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <% product = Product.find(cart_item.product_id) %>
      <tr>
        <td><%= link_to image_tag(product.thumbnail_url, size: product.thumbnail_resize) + ' ' + product.name, product %></td>
        <td>$<%= cart_item.price %></td>
        <td><%= cart_item.comments %></td>
        <td><%= link_to 'Remove from Cart', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
