<% provide :title, 'All Products' %>
<div class="center jumbotron">
  <h1>All Products</h1>
  <% if logged_in? %>
    (<%= link_to '+New Product', new_product_path %>)
  <% end %>
</div>

<div class="products-list">
  <% @products.each do |p| %>
      <div class="responsive">
        <div class="img">
          <%= link_to image_tag(p.thumbnail_url,
                                :size => p.image_resize(300), :alt => p.name),
                      url_for({:controller => 'products', :action => 'show', :id => p.id}) %>
          <div class="desc"><%= p.name %></div>
        </div>
      </div>
  <% end %>
</div>
